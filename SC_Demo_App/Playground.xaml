<s:SurfaceWindow x:Class="SC_Demo_App.Playground"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="SC_Demo_App"
    >
  <s:SurfaceWindow.Resources>
    <ImageBrush x:Key="WindowBackground" Stretch="None" Opacity="0.6" ImageSource="pack://application:,,,/Resources/PlaygroundBackground.jpg"/>
  </s:SurfaceWindow.Resources>

  <Grid Background="{StaticResource WindowBackground}" >
        <TabControl>
            <TabItem Header="Tab1" />
            <TabItem Header="Tab2" />
        </TabControl>
    </Grid>
</s:SurfaceWindow>
